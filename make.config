ifndef PRODUCT_BRANDING
PRODUCT_BRANDING = JitterTrap
endif

MAX_IFACE_LEN = 25

ifndef SAMPLE_PERIOD_US
SAMPLE_PERIOD_US = 1000
endif

ifndef WEB_SERVER_PORT
WEB_SERVER_PORT = 80
endif

ifndef WEB_SERVER_DOCUMENT_ROOT
WEB_SERVER_DOCUMENT_ROOT = /var/lib/jittertrap
endif

# list seperated by ':'
ifndef ALLOWED_IFACES
ALLOWED_IFACES = ""
endif

# Which CPU to run real-time thread on, starting at 0.
ifndef RT_CPU
RT_CPU = 0
endif

ifndef INTERVAL_COUNT
INTERVAL_COUNT = 5
endif

ifndef MAX_FLOW_COUNT
MAX_FLOW_COUNT = 20
endif

CFLAGS_HARDENED = \
 -fPIC \
 -fstack-protector \
 --param ssp-buffer-size=4 \
 -fPIE -pie -Wl,-z,relro,-z,now

ifdef NDEBUG
CFLAGS := -O2 -g -flto -W -Wall -std=c11 -pthread $(CFLAGS_HARDENED) $(CFLAGS)
else
CFLAGS := -O -g3 -flto -W -Wall -std=c11 -pthread $(CFLAGS_HARDENED) $(CFLAGS)
endif
